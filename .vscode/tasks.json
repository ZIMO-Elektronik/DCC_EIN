{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake DCC_EINTests Clang",
      "type": "shell",
      "isBackground": true,
      "command": "cmake -Bbuild -GNinja -DCMAKE_TOOLCHAIN_FILE=CMakeModules/toolchains/clang.cmake -DCMAKE_BUILD_TYPE=Debug"
    },
    {
      "label": "CMake DCC_EINTests GCC12",
      "type": "shell",
      "isBackground": true,
      "command": "cmake -Bbuild -GNinja -DCMAKE_TOOLCHAIN_FILE=CMakeModules/toolchains/gcc-12.cmake -DCMAKE_BUILD_TYPE=Debug"
    },
    {
      "label": "CMake DCC_EINTests",
      "type": "shell",
      "isBackground": true,
      "command": "cmake -Bbuild -GNinja -DCMAKE_BUILD_TYPE=Debug"
    },
    {
      "label": "Ninja DCC_EINTests",
      "type": "shell",
      "isBackground": true,
      "command": "ninja -C build DCC_EINTests"
    },
    {
      "label": "Run DCC_EINTests",
      "type": "shell",
      "isBackground": true,
      "command": "./build/tests/DCC_EINTests"
    },
    {
      "label": "Run mscgen",
      "type": "shell",
      "isBackground": true,
      "command": "mscgen -Tpng -i ./data/protocol.msc -o ./data/images/protocol.png"
    }
  ]
}